<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <android.support.v7.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/primary"
            android:theme="@style/ToolbarTheme"
            android:popupTheme="@style/Theme.AppCompat"
            android:fitsSystemWindows="true"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="20dp">

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/icons"
                    android:src="@drawable/ic_location"/>
                <EditText
                    android:id="@+id/edit_source"
                    android:paddingLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="Start Location"
                    />
                <ImageButton
                    android:id="@+id/button_source_point_in_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_point_in_map"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:tint="@color/icons"/>

                <ImageButton
                    android:id="@+id/button_current_location"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_current_location"
                    android:layout_marginRight="10dp"
                    android:layout_toLeftOf="@id/button_source_point_in_map"
                    android:background="#00000000"
                    android:tint="@color/icons"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/icons"
                    android:src="@drawable/ic_flag"/>
                <EditText
                    android:id="@+id/edit_destination"
                    android:paddingLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textCapWords"
                    android:hint="Destination"

                    />
                <ImageButton
                    android:id="@+id/button_destination_point_in_map"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_point_in_map"
                    android:layout_alignParentRight="true"
                    android:background="#00000000"
                    android:tint="@color/icons"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/icons"
                    android:src="@drawable/ic_users"/>
                <EditText
                    android:id="@+id/edit_number_of_people"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:hint="Number of people"
                    android:paddingLeft="40dp"
                    android:inputType="number"/>
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/icons"
                    android:src="@drawable/ic_calender"/>
                <EditText
                    android:id="@+id/edit_date"
                    android:paddingLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Date"
                    android:inputType="date"

                    />
            </RelativeLayout>

            <RelativeLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_marginTop="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:tint="@color/icons"
                    android:src="@drawable/ic_time"/>
                <EditText
                    android:id="@+id/edit_time"
                    android:paddingLeft="40dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Time"
                    android:inputType="time"

                    />
            </RelativeLayout>

            <EditText
                android:id="@+id/edit_description"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Description"
                android:inputType="textMultiLine|textCapSentences"/>
            <Button
                android:id="@+id/button_post_carpool"
                android:layout_marginTop="10dp"
                android:layout_gravity="right"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Post"/>
        </LinearLayout>
    </LinearLayout>
</ScrollView>